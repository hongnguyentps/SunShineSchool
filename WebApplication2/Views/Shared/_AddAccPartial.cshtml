<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Thêm Tài Khoản</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body card-block">
                    <div class="row form-group">
                        <div class="col col-md-5">
                            <label for="FirstNameModal">Họ</label>
                        </div>
                        <div class="col-12 col-md-7">
                            <input class="form-control" id="FirstNameModal" name="FirstNameModal" placeholder="Nhập họ..." required="required" type="text" value="" maxlength="30">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-5">
                            <label for="LastNameModal">Tên</label>
                        </div>
                        <div class="col-12 col-md-7">
                            <input id="LastNameModal" class="form-control" name="LastNameModal" placeholder="Nhập tên..." required="required" type="text" value="" maxlength="30">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-5">
                            <label for="Email-Sign-Up">Email</label>
                        </div>
                        <div class="col-12 col-md-7">
                            <input id="Email-Sign-Up" name="Email-Sign-Up" placeholder="Email" required="required" type="email" value="" class="form-control">
                            
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-5">
                            <label for="Password-sign-up">Mật khẩu</label>
                        </div>
                        <div class="col-12 col-md-7">
                            <input autocomplete="off" class="form-control" id="Password-sign-up" name="Password-sign-up" placeholder="..." required="required" type="password" value="">
                            <span class="help-block">Ít nhất 6 kí tự</span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-5">
                            <label for="textarea-input" class=" form-control-label">Ghi chú</label>
                        </div>
                        <div class="col-12 col-md-7">
                            <textarea name="textarea-input" id="textarea-input" rows="9" placeholder="..." class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div>
                        <input type="button" id="submitModal" class="btn btn-primary" value="Tạo">
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>

            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#Email-Sign-Up').val("");
        $('#Password-sign-up').val("");
    })

    $('#submitModal').click(function () {
        $('#submitModal').prop('disabled', true);
        $('.sign-up-error').empty();
        var firstName = $('#FirstNameModal').val();
        var lastName = $('#LastNameModal').val();
        var email = $('#Email-Sign-Up').val();
        var password = $('#Password-sign-up').val();
        var data = {
            FirstName: firstName,
            LastName: lastName,
            Email: email,
            Password: password
        };
        $.ajax({
            url: '/admin/Account/ThemTaiKhoan',
            type: 'POST',
            data: data,
            success: function () {
                $('#Email-Sign-Up').val("");
                $('#Password-sign-up').val("");
                window.location.reload();
            },
            error: function () {
                window.location.reload();
            }
        });
    });
</script>
