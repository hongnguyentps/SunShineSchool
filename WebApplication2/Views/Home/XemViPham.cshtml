@{
    ViewData["Title"] = "Xem Vi Phạm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var index = 1;
}

@model List<WebApplication2.POCO.ViPham>

<div class="page-container">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="main-content pt-3">
                <p class=" h3 tieu-de">
                    CÁC LỖI ĐÃ VI PHẠM
                </p>
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>STT</th>
                            <th>Mã Học Sinh</th>
                            <th>Lỗi Vi Phạm</th>
                            <th>Thời Gian</th>
                            <th>Ghi Chú</th>
                        </tr>
                    </thead>
                    <tbody>
                    <tbody class="background-table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(index++)</td>
                                <td>@item.HsId</td>
                                <td>@item.NoiDungViPham</td>
                                <td>@item.NgayViPham.ToShortDateString()</td>
                                <td>@item.GhiChu</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>